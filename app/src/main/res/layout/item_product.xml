<?xml version="1.0" encoding="utf-8"?>
<com.wimatt.ux.drinkanddare.view.SquareCardLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/item_product_card"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:cardUseCompatPadding="true"
  android:clickable="true"
  android:focusable="true">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/item_productreport_img"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_placeholder"
      app:layout_constraintBottom_toTopOf="@+id/item_productreport_name"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/item_productreport_name"
      style="@style/Prio1Text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:padding="10dp"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="18dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

</com.wimatt.ux.drinkanddare.view.SquareCardLayout>