<?xml version="1.0" encoding="utf-8"?>
<com.wimatt.ux.drinkanddare.view.SquareCardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_product_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_productreport_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_status_empty"
        app:layout_constraintBottom_toTopOf="@+id/item_productreport_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_productreport_img"/>

    <ImageView
        android:id="@+id/item_productreport_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="start"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/item_productreport_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_productreport_name"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/item_productreport_name"
        style="@style/Prio1Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

</com.wimatt.ux.drinkanddare.view.SquareCardLayout>
