<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <!--&lt;!&ndash; colorPrimaryDark is used for the status bar &ndash;&gt;-->
        <!--<item name="colorPrimaryDark">@color/colorAccent</item>-->

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppButton" parent="Prio1Text">
        <item name="android:fontFamily">@font/cooper_std_black</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="backgroundTint">@color/button_accent</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="NavButton">

        <item name="android:background">@drawable/round_background</item>
        <item name="android:layout_width">@dimen/nav_btn_size</item>
        <item name="android:layout_height">@dimen/nav_btn_size</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:drawablePadding">-10dp</item>

    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/prio1TextColor</item>
    </style>

    <style name="Prio1Text">
        <item name="android:text">Prio 1 Text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/prio1TextColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Prio2Text">
        <item name="android:text">Prio 2 Text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/prio2TextColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Prio3Text">
        <item name="android:text">Prio 3 Text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/prio3TextColor</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="ToolbarButton">
        <item name="android:layout_width">@dimen/nav_btn_size</item>
        <item name="android:layout_height">@dimen/nav_btn_size</item>
    </style>

    <style name="CheckBoxTheme" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorDisabled</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_shape</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

</resources>
